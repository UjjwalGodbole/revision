<%- layout("/layouts/boilerplate.ejs") %>
<br><br><br><br>
<div class="row mt-3">
    <div class="col-8 offset-2">
        <h3>Revision Details:</h3>
    </div>
<div class="card col-5 offset-4 showCard">
    <div class="card-body">
    <p class="card-text">
        <hr>
       <b>Subject:</b>
       <p> <%= listing.subject %></p>
       <hr>
       <b>Topics:</b> 
       <p> <%= listing.topics %> </p>
       <hr>
       <b>Note: </b>
       <p><%= listing.note %></p>
       <hr>
    </p>  
    </div>
</div>
<br>
</div>
<div class="btns">
<a href="/listings/<%= listing._id%>/edit" class="btn btn-dark  offset-4">Edit</a>
<form method="post" action="/listings/<%= listing._id %>?_method=delete">
    <button class="btn btn-danger offset-3">Delete</button>
</form>
</div>
